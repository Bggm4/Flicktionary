<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>


<body class="bodyFlick">
  <head><!--Opening head tag -->
    <!--Linking CSS File -->
    <link rel="stylesheet" type="text/css" href="extras/style.css">
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="extras/script.js"></script>
    <title>Flicktionary</title>
    <!-- <link rel="stylesheet" href="unsemantic-grid-responsive-tablet.css"> -->


  <!-- <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/> -->
  </head><!--Closing head tag -->

  <main class="mainBody" id="mainBody">

    <!--div tags with the logo image, image is called from a file -->
    <div>
      <img src="assets/logo.png" class="SiteLogo">
    </div>
    <input type="text" class="searchbar" id="searchInput" name="Search Media" placeholder="Search Media"> </input>
    <br>
    <button id="submit">Submit</button>

    <!--P tag to give the user an idea of what to search for.
    This is so that there is no uncertainty over what the site does-->
    <p>Streamed Media Search Engine </p>


    <div class="allMovies" id="allMovies">
      <div class="item1" id="movieBar">
        <div class="large-item">
          <div id="message"></div>
          <ul id="pagination"></ul>
          <div id="resultsbox">
            <div id="results">
              <!-- content will be loaded here (promise) -->
            </div>
          </div>
        </div>
      </div>
      <div class="item2" id="sideBar">
        <div class="large-item-2" id="moreDetails">
          <p>Movie:</p>
        </div>
      </div>
    </div>
  </main> <!--Closing main tag -->




  <footer>
    <% include ../partials/footer %>
  </footer>

</body><!--Closing body tag -->
</html><!--Closing html tag -->
